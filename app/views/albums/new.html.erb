<h1>Add <%= @artist.name %> album</h1>

<%= form_with(model: [@artist, @album], local: true) do |form| %>
  <% if @album.errors.any? %>
    <div>
      <h2><%= pluralize(@album.errors.count, 'error') %> did not allow the album to be saved</h2>
    </div>

    <ul>
      <% @album.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.submit %>
    <%= link_to 'Cancel', artist_path(@artist) %>
  </div>
<% end %>